<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="sidebar">
        <img src="https://media-exp1.licdn.com/dms/image/C4E03AQFNAMJZXkWp4g/profile-displayphoto-shrink_200_200/0?e=1593648000&v=beta&t=eoY_2zRIlSpJdVABye7wfhnbk0qn3SJbYv2TuLmXs0k" 
             style="border-radius: 30px; height:120px; width:120px; margin-left: auto; margin-right: auto; display: block" />
            <p style="font-size: 16px; text-decoration-color: white; text-align: center">Jason Gardner<br />C# Developer<br /></p>
            <a asp-controller="Home" asp-action="Index">About Me</a>
            <a asp-controller="Home" asp-action="Projects">Projects</a>
            <a asp-controller="Home" asp-action="Contact">Contact</a>        
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
